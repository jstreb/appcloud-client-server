.header
  .divider
  h1 App Cloud Web Server
  .divider

.header-container
  h4 My Apps
  a(href="#") New App
ul
  - for( var i=0; i<apps.length; i++ )
    - if( apps[i].placeholder )
      li.app
        img(src="/images/emptyapp-icon.png")
    - else
      li.app(data-name=apps[i].name)
        a(href="/scan/" + apps[i].name)
          img(src="/images/icon.png")
          p #{apps[i].name}
br
br

.header-container
  h4 Demo Apps
  -if(demos.length > 0)
    a(href="#") Refresh Demos
    
- if( demos.length > 0 )
  ul
    - for( var i=0; i<demos.length; i++ )
      li.app(data-name=demos[i].name)
        a(href="/scan/" + demos[i].name)
          img(src="/images/teaching-icon.png")
        p #{demos[i].name}
        p.readme Read Me
- else 
  .download Download the Demos!

.readme-container
  .contents
  .close

script(src="http://code.jquery.com/jquery-1.7.2.min.js")
script(src="/javascripts/home.js")
script(src="/javascripts/jquery.syntaxhighlighter.min.js")